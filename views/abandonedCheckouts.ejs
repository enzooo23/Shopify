<h1>Abandoned Checkouts</h1>
<div>
  <canvas id="abandoned-checkouts-chart"></canvas>
</div>

<script>
  const ctx = document.getElementById('abandoned-checkouts-chart').getContext('2d');
  const chart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: <%= data.map(checkout => checkout.created_at) %>,
      datasets: [{
        label: 'Abandoned Checkouts',
        data: <%= data.map(checkout => checkout.id) %>,
        backgroundColor: 'rgba(255, 99, 132, 0.2)',
        borderColor: 'rgba(255, 99, 132, 1)',
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>
